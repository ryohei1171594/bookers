<h1>Book</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
      <p><%= link_to 'show', books_path%></p>
    </tr>
  </thead>
  
</table>
<% @books.each do |book| %>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li>
        <%= message %>error
      </li>
    <% end %>
  </ul>
<% end %>

  
  <span>
    <%= link_to book.title, "/books/#{book.id}" %>
  </span>
  
  <span><%= book.body %></span>
<% end %>

<h1>New book</h1>
<!-- form_with部分 -->
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>
